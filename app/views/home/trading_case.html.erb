<div class="row">
  <div class="col-4">
    <%= render partial: "filter" %>
  </div>
  
  <div class="col-8">
    <div class="d-flex justify-content-between mx-3 mt-3">
      <%= @cases.count %> cases
      <div class="dropdown">
        <button class="btn btn-link dropdown-toggle outline-none" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Price: High to Low
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="#">Newest</a>
          <a class="dropdown-item" href="#">Prices: Low to High</a>
          <a class="dropdown-item" href="#">Price: High to Low</a>
          <a class="dropdown-item" href="#">Most Traded</a>
        </div>
      </div>
    </div>
    <div class="d-flex flex-row flex-wrap wrap-cases">
      <% @cases.each do |_case| %>
        <%= render partial: "case", locals: { _case: _case} %>
      <% end %>
    </div>
  </div>
</div>

<style>
  .wrap-cases > div {
    flex: 48%;
    margin: 1rem 0 0 1rem;
  }
</style>